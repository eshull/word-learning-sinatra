<div class="container">
  <h1>Welcome to Word Definer</h1>
  <h2>Choose one of our words to enter in your own definition for:</h2>
  <ul>
    <li>Duck</li>
    <li>Lizard</li>
    <li>House</li>
    <li>Banana</li>
    <li>Dog</li>
  </ul>

  <% @word_list.each do |item| %>
    <p><% item.word %></p>
    <a href='/words/<%= item.id %>'><%= item.word %></a>
  <% end %>

  <form action="/" method="post">
    <div class="form-group">
      <label for="new_word">Enter one of the words we have defined, or make a definition for your own word:</label>
      <input type="text" class="form-control" name="new_word" id="new_word">
    </div>
    <div class="form-group">
      <label for="definition">Define</label>
      <input name="definition" class="form-control" type="text">
    </div>
    <button type="submit" class="btn btn-primary" >Add Word</button>
  </form>
</div>
