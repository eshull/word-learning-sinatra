<div class="container">
  <h2>The word is: <%= @word.word%> </h2>
  <h2>This is a <%= @word.word%></h2>
  <h3>Other definitions of <%= @word.word%> </h3>

  <div class="panel">
    <div >
      <h3 class="panel-title">Definitions:</h3>
    </div>
    <div class="panel-body">
      <ul>
        <% @word.definition_array.each do |definition| %>
          <li><%= definition %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>

<div class="container">
  <form action="/words/:id" method="post" >
    <div class="form-group">
      <label for="definition" class="control-label">Add a definition:</label>
      <div>
        <input name="definition" class="form-control" type="text">
      </div>
    </div>
    <div class="form-group">
      <div>
        <button name="add_definition" value="<%= @word.id %>" type="submit" class="btn btn-info btn-lg">Add</button>
      </div>
    </div>
  </form>
</div>

<%= @image %>
<a href='/'>Return to home page</a>
</div>
