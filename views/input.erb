<div class="container">

<h1><%= "Make a list of your favorite things:"%></h1>
<!-- <h1><%= @description %></h1> -->
<% @list.each do |item| %>
  <p><%= item.food %></p>
  <a href='/items/<%= item.id %>'><%= item.food %></a>
<% end %>


<form action="/" method="post">
  <div class="form-group">
    <label for="food">What is your favorite food?</label>
    <input type="text" class="form-control" name="food" id="food">
  </div>
  <div class="form-group">
    <label for="car">What is your favorite car?</label>
    <input type="text" class="form-control" name="car" id="car">
  </div>
  <div class="form-group">
    <label for="color">What is your favorite color?</label>
    <input type="text" class="form-control" name="color" id="color">
  </div>
  <div class="form-group">
    <label for="person">Who is your favorite person?</label>
    <input type="text" class="form-control" name="person" id="person">
  </div>
  <div class="form-group">
    <label for="animal">What is your favorite animal?</label>
    <input type="text" class="form-control" name="animal" id="animal">
  </div>
  <div class="form-group">
    <label for="saying">What is your favorite saying?</label>
    <input type="text" class="form-control" name="saying" id="saying">
  </div>
  <button type="submit" class="btn btn-primary" >Make List</button>
</form>

</div>
